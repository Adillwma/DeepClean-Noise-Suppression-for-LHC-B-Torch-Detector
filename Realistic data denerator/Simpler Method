import numpy as np
import matplotlib.pyplot as plt
import random

reflect_x = 0.1

y_points = []
num_points = 100
min_num = -np.pi
max_num = np.pi
step = (max_num - min_num) / num_points
linear_x_points = np.linspace(min_num,max_num,num_points)
x_reflect_points = []

for i in linear_x_points:
    while i < -reflect_x or i > reflect_x:
        if i < -reflect_x:
            i = -i - 2 * reflect_x
        elif i > reflect_x:
            i = -i + 2 * reflect_x
    x_reflect_points.append(i)


y_points = [np.cos(i) for i in linear_x_points]
conjoined = np.squeeze(np.dstack((x_reflect_points, y_points)))
angle_filter = [i for i in conjoined if not np.cos(130.49 * np.pi / 180) < i[1] < np.cos(40.49 * np.pi / 180)]


plt.scatter(x_reflect_points, y_points, s = 1)
plt.show()